<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    layout_height="wrap_content"
    layout_width="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/color_visualizer_bg"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:background="@drawable/bg_file_controls"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:id="@+id/button_open"
            android:layout_height="@dimen/file_controls_button_size"
            android:layout_width="@dimen/file_controls_button_size"
            android:text="o"
            android:textColor="@color/log_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:id="@+id/current_file_text"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:padding="8dp"
            android:text="Privet"
            android:textColor="@color/log_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_delete"
            app:layout_constraintStart_toEndOf="@id/button_open"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:background="@drawable/bg_file_controls"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:id="@+id/button_delete"
            android:layout_height="@dimen/file_controls_button_size"
            android:layout_width="@dimen/file_controls_button_size"
            android:text="x"
            android:textColor="@color/log_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.omar.retromp3recorder.ui.wavetable.WavetableSeekbarPreview
        android:background="@color/color_visualizer_bg"
        android:id="@+id/wavetable"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent" />

</LinearLayout>