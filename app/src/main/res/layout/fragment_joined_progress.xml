<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fjp_recorder_progress"
        android:layout_width="@dimen/progress_width"
        android:layout_height="@dimen/control_buttons_dimen"
        android:background="@color/color_visualizer_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.omar.retromp3recorder.ui.wavetable.WavetablePreview
        android:id="@+id/fjp_recorder_wavetable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="64dp"
        android:background="@color/color_visualizer_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fjp_recorder_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.omar.retromp3recorder.ui.wavetable.WavetableSeekbarPreview
        android:id="@+id/fjp_player_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_visualizer_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>