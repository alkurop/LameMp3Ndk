<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/color_visualizer_bg"
        android:orientation="horizontal">

        <com.omar.retromp3recorder.ui.state_button.InteractiveButtonBlinking
            android:id="@+id/acf_play"
            android:layout_width="@dimen/control_buttons_dimen"
            android:layout_height="@dimen/control_buttons_dimen"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:image="@drawable/ic_play_composite" />

        <com.omar.retromp3recorder.ui.state_button.InteractiveButtonBlinking
            android:id="@+id/acf_record"
            android:layout_width="@dimen/control_buttons_dimen"
            android:layout_height="@dimen/control_buttons_dimen"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:image="@drawable/ic_record_composite" />

        <com.omar.retromp3recorder.ui.state_button.InteractiveButton
            android:id="@+id/acf_stop"
            android:layout_width="@dimen/control_buttons_dimen"
            android:layout_height="@dimen/control_buttons_dimen"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:image="@drawable/ic_stop" />

        <com.omar.retromp3recorder.ui.state_button.InteractiveButton
            android:id="@+id/acf_share"
            android:layout_width="@dimen/control_buttons_dimen"
            android:layout_height="@dimen/control_buttons_dimen"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12dp"
            app:image="@drawable/abc_ic_menu_share_mtrl_alpha" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>