<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFarLeft"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.17" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFarRight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />

    <ImageView
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:id="@+id/titleContainer"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:src="@drawable/title"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/guidelineFarRight"
        app:layout_constraintStart_toStartOf="@id/guidelineFarLeft"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/current_file"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:name="com.omar.retromp3recorder.app.ui.files.preview.CurrentFileFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleContainer" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/progress"
        android:layout_height="@dimen/wavetable_height"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:name="com.omar.retromp3recorder.app.ui.joined_progress.JoinedProgressFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_file" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/audio_controls"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:name="com.omar.retromp3recorder.app.ui.audio_controls.AudioControlsFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_visualizer"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:name="com.omar.retromp3recorder.app.ui.visualizer.VisualizerFragment"
        app:layout_constraintBottom_toTopOf="@id/log_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_controls" />

    <androidx.fragment.app.FragmentContainerView
        android:background="@color/color_visualizer_bg"
        android:id="@+id/log_fragment"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:name="com.omar.retromp3recorder.app.ui.log.LogFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>